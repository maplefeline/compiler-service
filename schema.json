{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A syntax tree",
  "type": { "$ref": "#/definitions/node" },
  "required": ["type", "givenName"],
  "definitions": {
    "node": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "children": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "$ref": "#/definitions/node" }
            ]
          }
        },
        "offset": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
